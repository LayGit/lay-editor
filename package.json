{
  "name": "lay-editor",
  "version": "0.0.1",
  "description": "React editor based on draftjs",
  "keywords": [
    "react",
    "react-editor",
    "editor",
    "drfatjs",
    "lay-editor"
  ],
  "files": [
    "lib",
    "es",
    "assets/*.css",
    "dist"
  ],
  "main": "lib/index",
  "module": "es/index",
  "homepage": "http://github.com/LayGit/lay-editor",
  "author": "jserlay@gmail.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:LayGit/lay-editor.git"
  },
  "bugs": {
    "url": "http://github.com/LayGit/lay-editor/issues"
  },
  "licenses": "MIT",
  "config": {
    "port": 9090,
    "entry": {
      "lay-editor": [
        "./assets/editor.less",
        "./src/index.js"
      ]
    }
  },
  "scripts": {
    "build": "rc-tools run build",
    "gh-pages": "rc-tools run gh-pages",
    "start": "rc-tools run server",
    "compile": "rc-tools run compile --babel-runtime",
    "pub": "rc-tools run pub --babel-runtime",
    "lint": "rc-tools run lint",
    "types": "tslint *.ts{,x} && tsc"
  },
  "devDependencies": {
    "dtslint": "^0.3.0",
    "pre-commit": "1.x",
    "rc-tools": "^7.0.3",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "babel-runtime": "6.x",
    "classnames": "2.x",
    "draft-js": "^0.10.5",
    "draftjs-to-html": "^0.8.4",
    "draftjs-utils": "^0.9.4",
    "html-to-draftjs": "^1.4.0",
    "immutable": "^4.0.0-rc.12",
    "rc-dropdown": "^2.3.0",
    "rc-menu": "^7.4.20",
    "rc-tooltip": "^3.7.3"
  },
  "types": "index.d.ts"
}
